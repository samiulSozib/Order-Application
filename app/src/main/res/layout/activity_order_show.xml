<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Order_show">

    <LinearLayout
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="#0072bc"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/show_order_address1"
            android:textSize="18sp"
            android:text="hfdsjfh"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/show_order_name1"
            android:textSize="18sp"
            android:text="hfdsjfh"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/show_order_total1"
            android:textSize="18sp"
            android:text="hfdsjfh"
            android:textColor="#000"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/show_order_details"
        android:layout_weight="6"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:layout_weight="2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:id="@+id/make_pdf_id"
            android:text="Make PDF"
            android:textColor="#fff"
            android:background="#F70404"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>